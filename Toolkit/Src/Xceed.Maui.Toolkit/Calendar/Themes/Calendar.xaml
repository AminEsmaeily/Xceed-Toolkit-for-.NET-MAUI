                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Grid.Column="0" />
                  <Label Text="{Binding }"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Grid.Column="1" />
                  <Label Text="{Binding }"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Grid.Column="2" />
                  <Label Text="{Binding }"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Grid.Column="3" />
                  <Label Text="{Binding }"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Grid.Column="4" />
                  <Label Text="{Binding }"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Grid.Column="5" />
                  <Label Text="{Binding }"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Grid.Column="6" />
                  <local:CalendarDayButton Grid.Row="1"
                                           Grid.Column="0"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="1"
                                           Grid.Column="1"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="1"
                                           Grid.Column="2"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="1"
                                           Grid.Column="3"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="1"
                                           Grid.Column="4"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="1"
                                           Grid.Column="5"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="1"
                                           Grid.Column="6"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="2"
                                           Grid.Column="0"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="2"
                                           Grid.Column="1"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="2"
                                           Grid.Column="2"
                                           Style="{TemplateBinding CalendarDayButtonStyle}" />
                  <local:CalendarDayButton Grid.Row="2"
                                           Grid.Column="3"
